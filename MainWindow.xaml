<Window x:Class="GraphVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Визуализатор графов" 
        Height="750" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="900"
        MinHeight="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <!-- Верхняя часть -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель управления -->
            <ScrollViewer Grid.Column="0" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="#f5f5f5">
                <StackPanel Margin="10">
                    <TextBlock Text="Управление графом" 
                              FontWeight="Bold" 
                              FontSize="14"
                              Margin="0,0,0,10"/>

                    <!-- Управление графом -->
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Управление" FontWeight="SemiBold" Foreground="DarkBlue"/>
                            <Button x:Name="NewGraphButton" 
                                    Content="🆕 Новый граф" 
                                    Height="32" Margin="0,5"/>
                            <Button x:Name="ClearGraphButton" 
                                    Content="🗑️ Очистить граф" 
                                    Height="32" Margin="0,5"/>
                            <Button x:Name="ClearPathButton" 
                                    Content="🗑️ Очистить путь" 
                                    Height="32" Margin="0,5"/>
                        </StackPanel>
                    </Border>

                    <!-- Добавление элементов -->
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,10">
                        <StackPanel>
                            <TextBlock Text="Добавление" FontWeight="SemiBold" Foreground="DarkGreen"/>
                            <Button x:Name="AddVertexButton" 
                                    Content="➕ Добавить вершину" 
                                    Height="32" Margin="0,5"/>
                            <Button x:Name="AddEdgeButton" 
                                    Content="🔗 Добавить ребро" 
                                    Height="32" Margin="0,5"/>
                        </StackPanel>
                    </Border>

                    <!-- Построение графа -->
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,10">
                        <StackPanel>
                            <TextBlock Text="Построение" FontWeight="SemiBold" Foreground="DarkOrange"/>
                            <Button x:Name="BuildFromMatrixButton" 
                                    Content="📊 Из матрицы" 
                                    Height="32" Margin="0,5"/>
                            <Button x:Name="BuildFromListButton" 
                                    Content="📝 Из списка" 
                                    Height="32" Margin="0,5"/>
                        </StackPanel>
                    </Border>

                    <!-- Алгоритм Дейкстры -->
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,10">
                        <StackPanel>
                            <TextBlock Text="🔍 Алгоритм Дейкстры" 
                                      FontWeight="SemiBold" 
                                      Foreground="DarkRed"
                                      Margin="0,0,0,8"/>

                            <!-- Выбор вершин -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="От:" 
                                          VerticalAlignment="Center" 
                                          Grid.Column="0"
                                          Margin="0,0,5,0"/>

                                <ComboBox x:Name="StartVertexComboBox" 
                                         Grid.Column="1"
                                         Margin="0,0,10,0"
                                         Height="28"/>

                                <TextBlock Text="До:" 
                                          VerticalAlignment="Center" 
                                          Grid.Column="2"
                                          Margin="10,0,5,0"/>

                                <ComboBox x:Name="EndVertexComboBox" 
                                         Grid.Column="3"
                                         Height="28"/>
                            </Grid>

                            <!-- Кнопка поиска -->
                            <Button x:Name="FindPathButton" 
                                    Content="🔍 Найти путь" 
                                    Height="36" 
                                    Margin="0,5,0,10"
                                    Background="LightSkyBlue"
                                    FontWeight="Bold"/>

                            <!-- Результат -->
                            <Border Background="LightYellow" 
                                    BorderBrush="Gray" 
                                    BorderThickness="1"
                                    Padding="8"
                                    CornerRadius="4">
                                <TextBlock x:Name="PathResultText" 
                                          Text="Путь будет отображен здесь"
                                          TextWrapping="Wrap"
                                          MinHeight="45"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Информация -->
                    <Border Padding="0,10">
                        <StackPanel>
                            <TextBlock Text="Информация" FontWeight="SemiBold" Foreground="Purple"/>
                            <Button x:Name="ShowMatrixButton" 
                                    Content="📋 Показать матрицу" 
                                    Height="32" Margin="0,5"/>
                        </StackPanel>
                    </Border>

                    <Separator Margin="0,10"/>

                    <!-- Статус -->
                    <StackPanel>
                        <TextBlock Text="Статус:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="StatusText" 
                                  Text="Готов к работе" 
                                  TextWrapping="Wrap"
                                  MinHeight="45"
                                  Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="VertexCountText" 
                                      Text="Вершин: 0" 
                                      FontStyle="Italic"
                                      Margin="0,0,15,0"/>
                            <TextBlock x:Name="EdgeCountText" 
                                      Text="Рёбер: 0" 
                                      FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Холст для графа -->
            <Canvas x:Name="GraphCanvas" 
                    Grid.Column="1" 
                    Background="White"
                    ClipToBounds="True"/>
        </Grid>

        <!-- Нижняя часть - информация -->
        <TabControl Grid.Row="1" Margin="10,5,10,10">
            <TabItem Header="📊 Матрица смежности">
                <TextBox x:Name="AdjacencyMatrixText" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         TextWrapping="Wrap"/>
            </TabItem>

            <TabItem Header="📝 Список смежности">
                <TextBox x:Name="AdjacencyListText" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         TextWrapping="Wrap"/>
            </TabItem>

            <TabItem Header="💡 Примеры">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Пример 1: Простой граф" 
                                  FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Example1Text" 
                                 Text="0 1 0&#x0a;1 0 1&#x0a;0 1 0" 
                                 FontFamily="Consolas"
                                 Height="65"
                                 Margin="0,0,0,10"/>

                        <TextBlock Text="Пример 2: Для алгоритма Дейкстры" 
                                  FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="Example2Text" 
                                 Text="0 2 6 0 0&#x0a;2 0 3 5 0&#x0a;6 3 0 1 0&#x0a;0 5 1 0 4&#x0a;0 0 0 4 0" 
                                 FontFamily="Consolas"
                                 Height="65"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>